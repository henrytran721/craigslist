<html>
    <head>
        <%- include('header.ejs') %>
    </head>
    <body>
        <div class='categoryContainer'>
            <div class='loggedInContainer'>
                <div class='lIHeader'>
                    <h1 class='userHomepage'>Hello, <%= user.first_name + ' ' + user.last_name %></h1>
                    <div class='hpLogo'>
                        <a href='/'><img src='https://i.imgur.com/44xTMJR.png' /></a>
                        <a href='/logout'>Log Out</a>
                    </div>
                </div>
            </div>
            <div class='categoryHeader'>
                <h1>Categories</h1>
            </div>
            <div class='categoryList'>
                <ul>
                <% for(let i = 0; i < categories.length; i++) { 
                    console.log(categories[i].image);
                    %>
                    <a class='categoryPostCard' href='/categories/<%= categories[i]._id%>'>
                        <li>
                            <div class='categoryImage'>
                                <img src=<%= categories[i].image %> />
                            </div>
                            <div class='categoryInfo'>
                                <h2><%= categories[i].category %></h2>
                                <p><%= categories[i].description %></p>
                            </div>
                        </li>
                    </a>
                <% } %>
                </ul>
            </div>
        </div>
    </body>
</html>